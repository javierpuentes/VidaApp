<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:layout_margin="9dp"
    android:gravity="top"
    android:orientation="vertical"
    android:id="@+id/inicio_usr"
    android:background="@drawable/logo_transparente">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/fuente"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="¡Bienvenido a tu aplicación        Vida APP!" />

    <ImageButton
        android:id="@+id/btnhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backhome"
        android:layout_gravity="end"
        android:contentDescription="Volver Home"
        android:background="@color/white"
        android:layout_marginBottom="5dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/fuente"
        android:textSize="22dp"
        android:textStyle="italic"
        android:padding="2dp"
        android:text="@string/Objetivo"
        android:background="#CAB1EE95"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/menu_usr"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnGas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/fuente3"
            android:text="Registro de facturas"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Registro de consumos"
            android:textSize="15sp"
            android:backgroundTint="#03A9F4"
            android:layout_marginStart="25dp"/>

    </LinearLayout>



    <Button
        android:id="@+id/manoselect"
        android:layout_width="105dp"
        android:layout_height="94dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/manoselect"
        android:insetTop="15dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BA96EB70"
        android:gravity="center"
        android:text="@string/seleccionarServicio"
        android:textColor="@color/fuente1"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/nuevasVistas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnNoticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="Noticias"
            android:textSize="16dp"
            android:textColor="@color/fuente1"
            android:backgroundTint="@color/button"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eventos"
            android:textColor="@color/fuente1"
            android:textSize="16dp"
            android:backgroundTint="@color/button"
            android:layout_marginEnd="10dp"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/btnSugerencias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Consejos"
            android:textColor="@color/fuente1"
            android:textSize="16dp"
            android:backgroundTint="@color/button"
            android:textStyle="italic"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_circle_left_24"
            app:tint="@color/button"
            android:contentDescription="Volver ventana anterior" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="VIDA  APP"
            android:layout_gravity="center"
            android:textColor="@color/fuente1"
        android:textSize="60sp"
        android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>

