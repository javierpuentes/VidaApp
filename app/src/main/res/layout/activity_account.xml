<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:layout_margin="10sp"
    android:gravity="top"
    android:orientation="vertical"
    android:id="@+id/inicio_usr"
    android:background="@drawable/logobg"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/fuente1"
        android:textSize="22dp"
        android:textStyle="bold"
        android:padding="2dp"
        android:text="¡Bienvenido, usuario con sesión iniciada!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/imageButton4"
        android:tooltipText="Cerrar la sesión"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_arrow_circle_left_24"
        app:tint="@color/button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/inicio_usr"
        android:orientation="horizontal"
        android:id="@+id/menu_usr"
        android:layout_marginTop="10dp"
        >


        <Button
            android:id="@+id/btnUsr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Energía"
            android:backgroundTint="@color/button"/>

        <Button
            android:id="@+id/btnUsr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gas"
            android:backgroundTint="@color/button"/>

        <Button
            android:id="@+id/btnUsr3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agua"
            android:backgroundTint="@color/button"/>
    </LinearLayout>

</LinearLayout>

