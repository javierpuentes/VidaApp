<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".noticiasActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/sugerencias_a"
    >

    <LinearLayout
        android:id="@+id/nuevasVistas1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnNoticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="Noticias"
            android:textSize="16dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/fuente1"
            android:backgroundTint="@color/fondo1"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/btnEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eventos"
            android:textColor="@color/fuente1"
            android:textSize="16dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/fondo1"
            android:layout_marginEnd="10dp"
            android:textStyle="italic"
            />

        <Button
            android:id="@+id/btnSugerencias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sugerencias"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/fuente"
            android:textStyle="italic"
            />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:src= "@drawable/back"
        android:layout_gravity="start"
        android:layout_marginTop="440dp"
        android:contentDescription="regresar"

        />

</LinearLayout>