<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eventos_a"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".noticiasActivity">

    <LinearLayout
        android:id="@+id/nuevasVistas1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnNoticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/fondo1"
            android:text="Noticias"
            android:textColor="@color/fuente1"
            android:textSize="16dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnEventos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/fuente"
            android:text="Eventos"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSugerencias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/fondo1"
            android:text="Concejos"
            android:textColor="@color/fuente1"
            android:textSize="16dp"
            android:textStyle="italic" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="30dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CE8FDC68"
            android:orientation="vertical">

            <!--ENERO-->

            <TextView
                android:id="@+id/txtE1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENERO"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos" />

            <!--MARZO-->

            <TextView
                android:id="@+id/txtE2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MARZO"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/eventos2"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos3" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos4" />


            <TextView
                android:id="@+id/txtE4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="ABRIL"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos5" />



            <TextView
                android:id="@+id/txtE5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAYO"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos6" />



            <TextView
                android:id="@+id/txtE6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="JUNIO"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos7" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos8" />


            <TextView
                android:id="@+id/txtE7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="AGOSTO"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos9" />



            <TextView
                android:id="@+id/txtE8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="OCTUBRE"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos10" />



            <TextView
                android:id="@+id/txtE9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DICIEMBRE"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/eventos11" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DC9DE371"
            android:layout_marginBottom="5dp"
            android:textStyle="italic"
            android:text="Selecciona una fecha y hora que nosotros te recordamos"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fuente"
                android:paddingEnd="30dp"
                android:text="Seleccionar Fecha" />

            <EditText
                android:id="@+id/edtFecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:ems="10"
                android:textAlignment="textStart"
                android:hint="Fecha del evento"
                android:inputType="text"
                android:background="#DC9DE371"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/fuente"
                android:paddingEnd="51dp"
                android:text="Seleccion Hora" />

            <EditText
                android:id="@+id/edtHora"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:ems="10"
                android:hint="Hora del notificacion"
                android:inputType="text"
                android:background="#DC9DE371"
                android:contentDescription="hora del evento"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnGuardarN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fuente"
            android:text="Guardar Notificacion" />

        <Button
            android:id="@+id/btnEliminarN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fuente"
            android:text="Eliminar Notificacion" />



    </LinearLayout>

    <ImageButton
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00FFFFFF"
        android:contentDescription="regresar"
        android:src="@drawable/back" />


</LinearLayout>