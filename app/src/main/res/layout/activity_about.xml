<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:opp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LoginActivity"
        android:layout_margin="10dp"
        android:background="@drawable/logo_transparente"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            opp:srcCompat="@drawable/isotipo" />

        <TextView
            android:id="@+id/vidaapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="VIDA  APP"
            android:textAlignment="center"
            android:textColor="#195101"
            android:textSize="60sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ScrollView
            android:layout_width="350dp"
            android:layout_height="298dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:background="#E6F3E7"
                android:justificationMode="inter_word"
                android:text="@string/contenido"
                android:textColor="#3C593D"
                android:textSize="18sp"
                android:textStyle="bold" />
        </ScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageButton
            android:id="@+id/Buttonregresar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:contentDescription="Regresar"
            android:src="@drawable/baseline_arrow_circle_left_24"
            app:tint="@color/button" />

        <TextView
            android:id="@+id/btnM6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/button"
            android:gravity="center"
            android:text="Â¡Te ayudamos a planear tu ahorro!"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="italic"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>