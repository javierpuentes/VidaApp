<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:layout_margin="10dp"
    android:background="@drawable/logobg"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:text="VIDA  APP"
        android:textColor="#195101"
        android:textSize="60sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:padding="2dp"
        android:text="¡Está listo para empezar!"
        android:background="@color/white"
        android:textAlignment="center"
        android:textColor="@color/fuente"
        android:textSize="22sp"
        android:textStyle="bold|italic"/>


    <TextView
        android:id="@+id/txtVuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Nombre de usuario"
        android:textColor="#195101"
        android:background="#8BC34A"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/txtTextuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Ingrese su nombre de usuario"
        android:background="@color/white"
        android:textStyle="italic"
        android:textAlignment="center"
        android:inputType="text"
        android:minWidth="50dp"
        android:minHeight="48dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtVclave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Contraseña"
        android:background="#8BC34A"
        android:textColor="#195101"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtTextclave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Ingrese su contraseña"
        android:minWidth="50dp"
        android:minHeight="48dp"
        android:background="@color/white"
        android:textStyle="italic"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnM4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button"
        android:text="Iniciar sesión"
        android:textColor="#195101"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnM3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:text="Recuperar contraseña"
        android:textStyle="italic|bold"
        android:textColor="#195101"
        android:textSize="22sp"
        android:layout_gravity="end"/>



    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:text="Datos de prueba: Root => 123456" />


    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:scaleType="centerCrop"
        android:contentDescription="Regresar"
        android:src="@drawable/baseline_arrow_circle_left_24"
        app:tint="@color/button" />

</LinearLayout>
