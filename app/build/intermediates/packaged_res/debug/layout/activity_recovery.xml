<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp"
    android:background="@drawable/logobg"
    android:backgroundTint="@color/background"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="10dp"
        android:text="@string/mensajeRecovery"
        android:textAlignment="center"
        android:textColor="@color/fuente2"
        android:textSize="28sp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/txtVuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/ingresa_tu_correo_o_celular"
        android:textColor="@color/fuente"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtTextuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint"
        android:inputType="textVisiblePassword"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/txtVclave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/ingresa_el_codigo_de_verificacion"
        android:textColor="@color/fuente"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtTextclave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/password"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtVnewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/ingresa_nueva_contrasena"
        android:textColor="@color/fuente"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etxtnewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint"
        android:inputType="textWebPassword"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btnM5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/button3"
        android:text="@string/recuperar_cuenta"
        android:textColor="@color/fuente4"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_circle_left_24"
            app:tint="@color/button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/title"
            android:textColor="@color/fuente4"
            android:textSize="68sp"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>