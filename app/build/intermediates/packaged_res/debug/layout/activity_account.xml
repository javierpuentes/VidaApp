<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity"
    android:layout_margin="10dp"
    android:gravity="top"
    android:orientation="vertical"
    android:id="@+id/inicio_usr"
    android:background="@drawable/logobg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/fuente"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="¡Bienvenido a tu aplicación VidaAPP!" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@drawable/home"
        android:scaleType="centerCrop"
        android:backgroundTint="@color/white"
        app:tint="@color/button"
        android:layout_gravity="end"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/fuente"
        android:textSize="22dp"
        android:textStyle="italic"
        android:padding="8dp"
        android:text="@string/Objetivo"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/menu_usr"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Energía"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:backgroundTint="@color/fuente2"
            android:layout_marginEnd="25dp"/>

        <Button
            android:id="@+id/btnWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agua"
            android:textSize="22sp"
            android:backgroundTint="#03A9F4"
            android:layout_marginStart="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnGas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gas"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:backgroundTint="@color/fuente3"/>
    </LinearLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/manoselect"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/fuente"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:text="@string/seleccionarServicio" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_arrow_circle_left_24"
            app:tint="@color/button" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:text="VIDA  APP"
        android:textColor="#195101"
        android:textSize="60sp"
        android:textStyle="bold"
        />

    </LinearLayout>
</LinearLayout>

